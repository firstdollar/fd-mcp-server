{
  "name": "@fd-backend/mcp-server",
  "version": "0.0.1",
  "description": "First Dollar MCP Server - Web App and API",
  "private": true,
  "type": "module",
  "engines": {
    "node": "22"
  },
  "packageManager": "npm@10.9.3",
  "scripts": {
    "dev": "next dev -p 3000",
    "dev:mcp": "tsx watch src/server/index.ts",
    "clean": "rm -rf dist .next tsconfig.tsbuildinfo next-env.d.ts",
    "build": "next build && npm run build:mcp && rm -f next-env.d.ts",
    "build:mcp": "tsc -p tsconfig.server.json && rm -f tsconfig.tsbuildinfo",
    "start": "next start -p 3000",
    "start:mcp": "node dist/server/index.js",
    "start:stdio": "node dist/server/stdio.js",
    "dev:stdio": "tsx src/server/stdio.ts",
    "lint": "next lint",
    "compile": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "0.39.0",
    "@modelcontextprotocol/sdk": "1.25.2",
    "@radix-ui/react-avatar": "1.1.2",
    "@radix-ui/react-dialog": "1.1.4",
    "@radix-ui/react-dropdown-menu": "2.1.4",
    "@radix-ui/react-label": "2.1.1",
    "@radix-ui/react-scroll-area": "1.2.2",
    "@radix-ui/react-select": "2.1.4",
    "@radix-ui/react-separator": "1.1.1",
    "@radix-ui/react-slot": "1.1.1",
    "@radix-ui/react-tabs": "1.1.2",
    "@radix-ui/react-tooltip": "1.1.6",
    "@tanstack/react-query": "5.62.8",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "cors": "2.8.5",
    "dotenv": "^17.2.3",
    "express": "4.21.2",
    "firebase": "11.8.1",
    "lucide-react": "0.468.0",
    "next": "15.5.7",
    "node-fetch": "^2.7.0",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "react-markdown": "9.0.1",
    "remark-gfm": "4.0.0",
    "tailwind-merge": "2.6.0",
    "zod": "3.25.67"
  },
  "devDependencies": {
    "@types/cors": "2.8.17",
    "@types/express": "5.0.2",
    "@types/node": "22.17.0",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "autoprefixer": "10.4.20",
    "postcss": "8.4.49",
    "tailwindcss": "3.4.17",
    "tsx": "4.19.2",
    "typescript": "5.8.3"
  }
}
